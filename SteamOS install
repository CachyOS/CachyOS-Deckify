    anchor.onclick = () => {
        const codeBlock = anchor.parentNode.querySelector('code');
        if (codeBlock) {
            const text = codeBlock.textContent;
            navigator.clipboard.writeText(text);
            alert('Code copied to clipboard!');
        }
        return false;
    };
});
</script>

